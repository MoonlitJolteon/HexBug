{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "isort.args": ["--profile", "black", "-l", "120"],
    "python.formatting.provider": "black",
    "python.analysis.typeCheckingMode": "basic", // strict doesn't play nice with a lot of things we're using
    "python.analysis.diagnosticMode": "workspace",
    "python.languageServer": "Pylance",
    "todo-tree.filtering.excludeGlobs": [
        "**/venv*/**",
        "**/Hexal/**",
        "**/HexMod/**",
        "**/hex_interpreter/**",
        "**/HexTweaks/**",
        "**/HexKinetics/**",
    ],
    "java.autobuild.enabled": false,
    "java.project.resourceFilters": [
        "**/Hexal/**",
        "**/HexMod/**",
        "**/MoreIotas/**",
        "**/HexTweaks/**",
        "**/HexKinetics/**",
        "\\.git",
    ],
    "java.server.launchMode": "LightWeight",
    "java.import.exclusions": [
        "**/Hexal/**",
        "**/HexMod/**",
        "**/MoreIotas/**",
        "**/HexTweaks/**",
        "**/HexKinetics/**",
        "**/node_modules/**",
        "**/.metadata/**",
        "**/archetype-resources/**",
        "**/META-INF/maven/**",
    ],
    "files.eol": "\n",
}